{
  "name": "spec-driven",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3000",
    "dev:clean": "lsof -ti:3000 | xargs kill -9 2>/dev/null || true && rm -rf .next && next dev -p 3000",
    "build": "npm run db:generate && next build",
    "start": "next start",
    "postinstall": "node -e \"if(process.env.SKIP_DRIZZLE_CODEGEN !== '1') { require('child_process').execSync('drizzle-kit generate', { stdio: 'inherit' }); }\"",
    "lint": "next lint",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "db:setup": "drizzle-kit migrate && npm run db:seed",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:seed": "node --require tsx/cjs drizzle/seed.ts",
    "db:setup:sqlite": "drizzle-kit migrate && npm run db:seed",
    "db:generate": "drizzle-kit generate",
    "db:migrate:sqlite": "drizzle-kit migrate",
    "db:push:sqlite": "drizzle-kit push",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:headed": "playwright test --headed",
    "verify-setup": "tsx scripts/verify-setup.ts",
    "spec:validate": "node scripts/spec-validate.js",
    "spec:constitutional-check": "node scripts/spec-constitutional-check.js",
    "spec:badge-gen": "node scripts/spec-badge-gen.js"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.937.0",
    "@aws-sdk/s3-request-presigner": "^3.937.0",
    "@libsql/client": "^0.15.15",
    "@neondatabase/serverless": "^1.0.2",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.2.6",
    "@types/nprogress": "^0.2.3",
    "archiver": "^7.0.1",
    "bcryptjs": "^2.4.3",
    "better-auth": "^1.3.34",
    "better-sqlite3": "^12.4.1",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "dompurify": "^3.3.1",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.7",
    "framer-motion": "^12.23.26",
    "js-yaml": "^4.1.0",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.344.0",
    "mermaid": "^11.12.1",
    "next": "^14.2.33",
    "nprogress": "^0.2.0",
    "react": "^18",
    "react-dom": "^18",
    "react-syntax-highlighter": "^16.1.0",
    "simple-git": "^3.30.0",
    "sonner": "^2.0.7",
    "sqlite3": "^5.1.7",
    "tailwind-merge": "^2.2.0",
    "tailwindcss-animate": "^1.0.7",
    "uuid": "^10.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/archiver": "^7.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/better-sqlite3": "^7.6.13",
    "@types/js-yaml": "^4.0.9",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@types/uuid": "^10.0.0",
    "@vitest/coverage-v8": "^4.0.9",
    "@vitest/ui": "^4.0.9",
    "autoprefixer": "^10.0.1",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.39.2",
    "eslint-config-next": "^16.1.1",
    "jsdom": "^23.0.1",
    "pino": "^10.1.0",
    "playwright": "^1.56.1",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "tsx": "^4.20.6",
    "type-fest": "^5.2.0",
    "typescript": "^5",
    "vitest": "^4.0.9",
    "winston": "^3.18.3",
    "zustand": "^5.0.8"
  }
}
